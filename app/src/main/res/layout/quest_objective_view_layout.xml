<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quest_objective_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/fantasy_fitness_gray"
    app:cardPreventCornerOverlap="true"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/objective_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/objective"
            />
        <TextView
            android:id="@+id/quest_objective_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/fantasy_fitness_white"
            android:textSize="24sp"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>